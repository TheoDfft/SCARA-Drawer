<launch>
    <node pkg="tf" type="static_transform_publisher" name="camera_transform_publisher" args="0.2 0.2 0.25 1 0 0 0 world camera_link 100" />
    <node pkg="tf" type="static_transform_publisher" name="pen_tip_transform_publisher" args="0.0 0.0 -0.077 0 0 0 1 aruco_marker_link pen_tip 100" />
    
    <arg name="visualize" default="true" />
    <arg name="markerSize" default="0.020" />

    <!-- <include file="$(find aruco_ros)/launch/marker_publisher.launch">
        <arg name="markerSize" value="$(arg markerSize)" />
    </include> -->

    <include file="$(find aruco_ros)/launch/single.launch">
        <arg name="markerSize" value="$(arg markerSize)" />
        <arg name="markerId" value="5" />
    </include>

    <group if="$(arg visualize)">
        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find scara_drawer_ros)/rviz/pen_tracker.rviz" />
        <!-- <node pkg="scara_drawer_ros" type="visualize_markers.py" name="visualize_markers" /> -->
        <!-- <node pkg="scara_drawer_ros" type="visualize_markers.py" name="visualize_markers" /> -->
    </group>

    <!-- <node pkg="scara_drawer_ros" type="pen_tracker" name="pen_tracker" /> -->
</launch>